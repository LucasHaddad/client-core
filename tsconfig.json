{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "lib": [
        "dom",
        "dom.iterable",
        "es5",
        "es6",
        "es2017",
        "es2015",
        "esnext",
        "scripthost"
    ],
    "baseUrl": "./",
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./types",
    "removeComments": false,
    "noImplicitAny": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "allowJs": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
